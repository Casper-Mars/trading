# 应用配置
APP_NAME=Quantitative Trading System
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# 数据库配置
DATABASE_URL=mysql+pymysql://root:root123@localhost:3306/trading_data?charset=utf8mb4
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# MySQL配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=root123
MYSQL_DATABASE=trading_data
MYSQL_CHARSET=utf8mb4

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=

# 阿里百炼配置
DASHSCOPE_API_KEY=your-dashscope-api-key-here
DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/api/v1
DASHSCOPE_TIMEOUT=30
DASHSCOPE_MAX_RETRIES=3

# 数据采集系统配置
DATA_COLLECTION_BASE_URL=http://localhost:8080
DATA_COLLECTION_TIMEOUT=30
DATA_COLLECTION_MAX_RETRIES=3

# Tushare API配置
TUSHARE_TOKEN=your-tushare-token-here
TUSHARE_TIMEOUT=30
TUSHARE_MAX_RETRIES=3
TUSHARE_RETRY_DELAY=1.0

# 回测配置
BACKTEST_INITIAL_CASH=100000.0
BACKTEST_COMMISSION=0.001
BACKTEST_SLIPPAGE=0.0001

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/quantitative_system.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# API配置
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# 安全配置
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30